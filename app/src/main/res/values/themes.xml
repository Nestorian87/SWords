        <item name="disabled">@color/gray</item>
        <item name="hint">#47D160</item>
        <item name="redButton">#DB356F</item>
        <item name="redButtonDisabled">#9C4E6C</item>
        <item name="blueButton">#4F6BDB</item>
        <item name="blueButtonDisabled">#444880</item>
        <item name="yellowButton">#D0DB56</item>
        <item name="yellowButtonDisabled">#959953</item>
    </style>


<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="SWords.base.dark" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="SWords.base.light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
